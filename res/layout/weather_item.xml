<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="2dip"
    android:background="@drawable/content_bg"
    android:orientation="horizontal"
    android:padding="2dip" >

    <TextView
        android:id="@+id/weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="2dp"
        android:padding="4dp"
        android:text="星期"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_margin="3dp"
        android:background="#ccc" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:layout_marginTop="5dip" >

            <ImageView
                android:id="@+id/weatherIv1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/wether_ico00" />

            <ImageView
                android:id="@+id/tempUp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/ui_ico22" />

            <TextView
                android:id="@+id/temp1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dip"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/tempUp"
                android:text="32℃"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/weatherType1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/weatherIv1"
                android:text="晴"
                android:textColor="@color/black" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_margin="3dp"
            android:background="#ccc" >
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="5dip" >

            <ImageView
                android:id="@+id/weatherIv2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/wether_ico00" />

            <ImageView
                android:id="@+id/tempDown"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:src="@drawable/ui_ico23" />

            <TextView
                android:id="@+id/temp2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/tempDown"
                android:text="32℃"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/weatherType2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dip"
                android:layout_toRightOf="@+id/weatherIv2"
                android:text="晴"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>